{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "baseUrl": ".",
        "lib": ["es6", "dom"],
        "noImplicitAny": false,
        "noImplicitThis": true,
        "strictNullChecks": false,
        "declaration": true,
        "emitDeclarationOnly": true,
        "isolatedModules": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "paths": {
            "app/ui": ["src/ui"],
            "app/types": ["src/types"],
            "app/config": ["src/config"],
            "app/theme": ["src/theme"],
            "app/redux": ["src/redux"],
            "app/locales": ["src/locales"],
            "app/pages/*": ["src/pages/*"],
            "app/service/*": ["src/service/*"],
            "app/types/*": ["src/types/*"],
            "app/helpers/*": ["src/helpers/*"]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}